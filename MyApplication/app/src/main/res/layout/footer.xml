<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home_tab"
                app:tint="@color/nav_icon_tint"
                android:contentDescription="Home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navVibe"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/imgVibe"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ondemand_video_24"
                app:tint="@color/nav_icon_tint"
                android:contentDescription="Vibe" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navVox"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/imgVox"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/post_add_24"
                app:tint="@color/nav_icon_tint"
                android:contentDescription="Vox" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navGames"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="32dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/imgGames"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/videogame_asset_24"
                app:tint="@color/nav_icon_tint"
                android:contentDescription="Games" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/navNotif"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/imgNotif"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/notifications_active_24"
                app:tint="@color/nav_icon_tint"
                android:contentDescription="Notifications" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>