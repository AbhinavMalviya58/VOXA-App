<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GameChoiceButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
    </style>
    <style name="StatCard" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">#2A2A2A</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- Style for the LinearLayout inside each StatCard -->
    <style name="StatContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Style for the icon in each StatCard -->
    <style name="StatIcon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginBottom">8dp</item>
<!--        <item name="app:tint">@color/white</item>-->
    </style>

    <!-- Style for the label text (e.g., "Rank", "Total Wins") -->
    <style name="StatLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style for the value text (e.g., "#1", "125") -->
    <style name="StatValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ================== USER INFO CARD STYLES ================== -->

    <!-- Style for icons in the User Info section (Email, Gender, etc.) -->
    <style name="InfoIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
<!--        <item name="app:tint">#CCCCCC</item>-->
    </style>

    <!-- Style for text in the User Info section -->
    <style name="InfoText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>