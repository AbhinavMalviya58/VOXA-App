<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with modern blue/white palette and edge-to-edge -->
    <style name="Theme.Voxa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_blue_light</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        <item name="colorSecondaryContainer">@color/surface_variant</item>
        <item name="colorOnSecondaryContainer">@color/text_secondary</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Edge-to-edge -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>

        <!-- Remove elevation shadow overlay for cleaner look -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- Typography -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Controls -->
        <item name="colorControlHighlight">@color/primary_blue_light</item>
        <item name="colorControlActivated">@color/accent_blue</item>
    </style>
</resources>
