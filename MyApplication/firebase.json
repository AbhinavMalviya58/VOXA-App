{
  "firestore": {
    "database": "(default)",
    "location": "asia-south1",
    "rules": "docs/voxa-redesign/firestore-rules-finalized.rules",
    "indexes": "docs/voxa-redesign/firestore-indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}
